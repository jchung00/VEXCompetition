	motor[claw2]= -80;
}

void forward() {//moves robot forward
	motor[leftMotor] = -127;
	motor[rightMotor] = -127;
}

void backward(){//moves robot backwards
	motor[leftMotor] = 127;
	motor[rightMotor] = 127;
}

